		String objeto = "";

		String a = "aa";
		String g = a.replaceAll("a", "g");
		System.out.println(g);
		for (int i=0; i<degraus; i++) {
			
			
			objeto+=" ";
				

			
		}
		
		for (int i=0; i<degraus; i++) {
			
			String novo = objeto.replace(" ", "");
			objeto+="#";
				
			System.out.println(objeto);

			
		}

		
		
	
	}
	
}